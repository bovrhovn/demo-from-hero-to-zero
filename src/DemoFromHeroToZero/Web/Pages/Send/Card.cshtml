@page
@model CardPageModel

@{
    ViewData["Title"] = "Send cards";
}

<h1>
    Send cards
</h1>

<p>Enter details below and upload pic, if already not in the list. Press preview button to see the result.</p>

<form method="post">
    <div class="form-group">
        <label for="subjectName">Subject</label>
        <input asp-for="CardViewModel.Subject"
               class="form-control"
               id="subjectName"
               type="text">
    </div>
    <div class="form-group">
        <label for="podName">Whom to send</label>
        <input asp-for="CardViewModel.FullName"
               class="form-control"
               id="podName"
               type="text">
    </div>
